{% set articleCount = 0 %}
{% set cardIndex = 0 %}


<div class="row">
    <div class="col-9">
        <div class="c-page-head c-page-head-xs">
            <div class="u-heading--large u-heading--large-xs u-pr--6 u-bg-white">{{title}}</div>
            <a href="javascript:;" class="c-page-head--link">View all</a>
        </div>
    </div>
</div>



<div class="row c-cards">
    {% for i in 0..2 if articles[articleCount] %}
        <div class="col-9 col-lg-3">
            {{this.render('../_single-article.twig', {
                article: articles[articleCount], 
                position: (articleCount+1),
                imageSize: {width: 360, height: 270},
                containerClass: "card-3 card-3-sm card-3-md design2"
            }) | raw}}
            {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
        </div>
    {% endfor %}
</div>